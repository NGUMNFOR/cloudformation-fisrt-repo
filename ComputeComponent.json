{
"AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Metadata": {

    },
    "Parameters": {
        "webkeypair": {
            "Description": "-",
            "Type": "AWS::EC2::KeyPair::KeyName"
          },

    "WEBinstancetype": {
    "Description": "Select the available instance type from the list.",
    "Type": "String",
   "AllowedValues": [
     "t2.micro",
     "t2.large",
     "t2.xlarge"
   ]
},

"APPinstancetype": {
    "Description": "Provide an instance for webinstance",
    "Type": "String",
    "Default": "t2.micro"
},

"APPkeypair": {
    "Description": "-",
    "Type": "AWS::EC2::KeyPair::KeyName"
    },
    
    "EnvironmentType": {
        "Description": "These are the list of environments like prod, dev, sbx",
        "Type": "String",
        "AllowedValues": [
          "prod",
          "dev",
          "sbx"
        ],
        "ConstraintDescription": "Most be specify "    
    }
    },
    "Mappings": {
        "RegionMapTo" : {
            "us-east-1"      : { "AMI" : "ami-0ed9277fb7eb570c9"},
            "us-west-1"      : { "AMI" : "ami-0bdb828fd58c52235"},
            "us-west-2"      : { "AMI" : "ami-a0cfeed8"}
          }

    },
    "Conditions": {
        "UseProdCondition" : {

            "Fn::Equals": [
         
               {"Ref": "EnvironmentType"},
         
               "prod"
         
            ]
         
         }

    },
    "Resources": {
        "WebInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": 
                { "Ref": "webkeypair" }
                ,
                "ImageId" : { "Fn::FindInMap" : [ "RegionMapTo", { "Ref" : "AWS::Region" }, "AMI" ]},
                
                "InstanceType": 
                { "Ref": "WEBinstancetype" }
                ,
                "SubnetId" : 
                { "Ref": "Camtelsubnetpub1" }
                ,
                "Monitoring": "true",
                "SecurityGroupIds" : 
                [{ "Ref": "WebSecurityGroup" }],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "WebInstance"
                    }
                ]
      
        }
        
        },
        
          
        "AppInstance": {
            "Type": "AWS::EC2::Instance",
            "Condition": "UseProdCondition", 
            "Properties": {
                "KeyName": 
                { "Ref": "APPkeypair" }
                ,
                "ImageId" : { "Fn::FindInMap" : [ "RegionMapTo", { "Ref" : "AWS::Region" }, "AMI" ]},
                "InstanceType": 
                { "Ref": "WEBinstancetype" },
                "SubnetId" : 
                { "Ref": "Camtelprivsubnet1" }
                
                ,
                "Monitoring": "true",
                "SecurityGroupIds" : [
                  
                  { "Ref": "WebSecurityGroup" }
                  
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AppInstance"
                    }
                ]
            
        }
                }
    },
    "Outputs": {

    }
}