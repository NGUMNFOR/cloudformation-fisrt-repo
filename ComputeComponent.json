{
"AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Metadata": {

    },
    "Parameters": {},
    "Mappings": {
        "RegionMapTo" : {
            "us-east-1"      : { "AMI" : "ami-0ed9277fb7eb570c9"},
            "us-west-1"      : { "AMI" : "ami-0bdb828fd58c52235"},
            "us-west-2"      : { "AMI" : "ami-a0cfeed8"}
          }

    },
    "Conditions": {
        "UseProdCondition" : {

            "Fn::Equals": [
         
               {"Ref": "EnvironmentType"},
         
               "prod"
         
            ]
         
         }

    },
    "Resources": {
        "WebInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": 
                { "Ref": "webkeypair" }
                ,
                "ImageId" : { "Fn::FindInMap" : [ "RegionMapTo", { "Ref" : "AWS::Region" }, "AMI" ]},
                
                "InstanceType": 
                { "Ref": "WEBinstancetype" },

                "SubnetId" : {"Fn::ImportValue" : {"Fn::Sub" : "${NetworkStack}-PubSebnet"}}
                ,
                "Monitoring": "true",
                "SecurityGroupIds" : [{"Fn::ImportValue" : {"Fn::Sub" : "${NetworkStack}-WebSG"}}],

                
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "WebInstance"
                    }
                ]
      
        }
        
        },
        
          
        "AppInstance": {
            "Type": "AWS::EC2::Instance",
            "Condition": "UseProdCondition", 
            "Properties": {
                "KeyName": 
                { "Ref": "APPkeypair" }
                ,
                "ImageId" : { "Fn::FindInMap" : [ "RegionMapTo", { "Ref" : "AWS::Region" }, "AMI" ]},
                "InstanceType": 
                { "Ref": "WEBinstancetype" },
                
                "SubnetId" : {"Fn::ImportValue" : {"Fn::Sub" : "${NetworkStack}-PrivSubnet"}}
                ,
                "Monitoring": "true",
                "SecurityGroupIds" :  [{"Fn::ImportValue" : {"Fn::Sub" : "${NetworkStack}-WebSG"}}],

                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AppInstance"
                    }
                ]
            
        }
                }
    },
    "Outputs": {

    }
}